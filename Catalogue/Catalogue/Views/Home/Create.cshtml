@model Catalogue.Models.Item

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <form>
      <div class="form-group">
            <label for="ItemId">Item ID:</label>
            <input type="text" class="form-control" id="ItemId" placeholder="Enter ID" ng-model="ItemID">
        </div>
        <div class="form-group">
            <label for="ItemName">Item Name:</label>
            <input type="text" class="form-control" id="ItemName" placeholder="Enter Name" ng-model="ItemName">
        </div>
        <div class="form-group">
            <label for="ItemDesc">Item Description:</label>
            <input type="text" class="form-control" id="ItemDescription" placeholder="Enter Description" ng-model="ItemDescription">
        </div>
        <div class="form-group">
            <label for="ItemPrice">Item Price:</label>
            <input type="text" class="form-control" id="ItemPrice" placeholder="Enter Price" ng-model="ItemPrice">
        </div>

        <button type="submit" class="btn btn-default" ng-click="Create()">Submit</button>
    </form>
</div>